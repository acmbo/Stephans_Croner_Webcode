{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple donut chart with embedded data.",
    "data":{"name":"table",
      "url": "http://127.0.0.1:5000/meta/postingsmonth/"},
    "mark": "bar",
    "width":370,
    "height":200,
    "padding":30,
    "encoding": {
      "y": {"field": "post", 
            "type": "quantitative",
            "aggregate": "sum",
            "title":"Posts per day"
            },
      "x": {"field": "date", 
            "timeUnit": "day",
            "type": "nominal",
            "title": "Weekday"
            }
    }
  }