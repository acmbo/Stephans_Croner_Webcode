{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bar chart that sorts the y-values by the x-values.",
    "data":{"name":"table",
      "url": "https://stephanscorner.de/meta/keywordsweek/"},
    "height":300,
    "width":315,
    "mark": "bar",
    "encoding": {
      "y": {
        "title": "Keyword",
        "field": "keyword",
        "type": "ordinal"
      },
      "x": {
        "aggregate": "sum",
        "field": "amount_of_uses",
        "title": "Frequency"
      }
    }
  }