{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height":{"step": 13},
  "data": {
      "url": "https://stephanscorner.de/themegraph/usedthemesWeekly/"
  },
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "date",
      "type": "ordinal",
      "timeUnit":"day",
      "title":"Day",
      "sort":["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
      },
      "color": {
        "field": "count",
        "type": "quantitative",
        "aggregate": "sum"
      },
      "y": {

        "field": "themen",
        "type": "nominal",
        "title": "Themes"
      }
  }
}