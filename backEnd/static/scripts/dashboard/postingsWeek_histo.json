{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height":300,
  "width":350,
  "data": {
      "url": "https://stephanscorner.de/meta/postingsyear/"
  },
  "title": "Daily Postings of DW acorss the year",
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "date",
          "timeUnit": "day",
          "type": "ordinal",
          "title": "Day"
      },
      "y": {
          "field": "date",
          "timeUnit": "month",
          "type": "ordinal",
          "title": "Month"
      },
      "color": {
          "field": "post",
          "aggregate": "sum",
          "type": "quantitative",
          "legend": {
              "title": null
          }
      }
  }
}